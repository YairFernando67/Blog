
  
  <div class="grid">
    <% @articles.each do |article| %>
    <div class="ui items no-margin container segment raised very padded text">
      <div class="item">
        <div class="content">
          <p>
            <%= link_to article.title, article_path(article) %> 
          </p>
          <small>Yair Fernando</small>
          <span><%= time_ago_in_words(article.created_at) %></span>
          <div class="description">
            <p><%= article.description %></p>
          </div>
        </div>
      </div>
     
    </div>
  
    <% end %>
    

  </div>
