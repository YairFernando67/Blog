<div class="comment">
  <a class="avatar">
 

  </a>
  <div class="content">
    <a class="author">Elliot Fu</a>
    <div class="metadata">
      <span class="date"> <%= time_ago_in_words(comment.created_at) %></span>
    </div>
    <div class="text">
      <p><%= comment.comment %></p>
    </div>
    <div class="actions">
      <%= link_to 'Delete', [comment.article, comment], method: :delete, 
      data: { confirm: "Are you sure?"} %>
    </div>
  </div>
</div>